@model IEnumerable<SaleManagementSystem.Model.DAL.Employee>

@{
    ViewBag.Title = "Employees Listing";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="row col-md-12">
        </div>
        <div class="row col-md-12">
            <div class="form-group col-md-6 row">
                <label class="col-md-3 mt-2">Name:</label>
                @Html.TextBox("searchname", null, htmlAttributes: new { @class = "form-control col-md-8  ", @placeholder = "Enter Name" })
            </div>
            <div class="form-group col-md-6 row">
                <label class="col-md-3 mt-2">Phone No.:</label>
                @Html.TextBox("searchphone", null, htmlAttributes: new { @class = "form-control col-md-8 ", @placeholder = "Enter Phone No." })
            </div>
        </div>
        <div class="row col-md-12">
            <div class="form-group col-md-6 row">
                <label class="col-md-3 mt-2">Join Date:</label>
                @Html.TextBox("searchjoindate", null, htmlAttributes: new { @id = "StartDate", @class = "form-control col-md-8  ", @placeholder = "Select a date" })
            </div>
            <div class="form-group col-md-6 row">
                <label class="col-md-3 mt-2">Left Date:</label>
                @Html.TextBox("searchleftdate", null, htmlAttributes: new { @id = "EndDate", @class = "form-control col-md-8  ", @placeholder = "Select a date" })
            </div>
        </div>
        <div class="row col-md-12">
            <div class="form-group col-md-6 row">
                <label class="col-md-3 mt-2">Position:</label>
                @Html.TextBox("searchposition", null, htmlAttributes: new { @class = "form-control col-md-8", @placeholder = "Enter Postion" })
            </div>
            <div class="form-group col-md-6 row">
                <label class="col-md-3 mt-2">Salary:</label>
                @Html.TextBox("searchminsalary", null, htmlAttributes: new { @class = "form-control col-md-3", @placeholder = "Enter Min", type = "number", step = "0.01" })
                <div class="col-md-2"></div>
                @Html.TextBox("searchmaxsalary", null, htmlAttributes: new { @class = "form-control col-md-3", @placeholder = "Enter Max", type = "number", step = "0.01" })
            </div>
        </div>
        <p>
            <button type="submit" class="btn btn-default mr-2"><i class="fa fa-search"></i> Search</button>
            <a class="btn btn-default dialog-link" href="@Url.Action("Create")"><i class="fas fa-plus"></i> Add new</a>
        </p>
    </div>
}
<div class="table-responsive">
    <table class="table table table-bordered table-striped table-hover">
        <tr style="background: #025215;" class="text-light">
            <th>
                @Html.DisplayNameFor(model => model.Name)
                <a class="ml-2 text-light" href="@Url.Action("Index", new { sortOrder = ViewBag.NameSortParm, searchname = ViewBag.Name, searchphone = ViewBag.Phone, searchjoindate = ViewBag.JoinDate, searchleftdate = ViewBag.LeftDate, searchposition = ViewBag.Position, searchminsalary = ViewBag.MinSalary, searchmaxsalary = ViewBag.MaxSalary })"><i class="fas fa-sort"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
                <a class="ml-2 text-light" href="@Url.Action("Index", new { sortOrder = ViewBag.JoinedDateSortParm, searchname = ViewBag.Name, searchphone = ViewBag.Phone, searchjoindate = ViewBag.JoinDate, searchleftdate = ViewBag.LeftDate, searchposition = ViewBag.Position, searchminsalary = ViewBag.MinSalary, searchmaxsalary = ViewBag.MaxSalary })"><i class="fas fa-sort"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeftDate)
                <a class="ml-2 text-light" href="@Url.Action("Index", new { sortOrder = ViewBag.LeftDateSortParm, searchname = ViewBag.Name, searchphone = ViewBag.Phone, searchjoindate = ViewBag.JoinDate, searchleftdate = ViewBag.LeftDate, searchposition = ViewBag.Position, searchminsalary = ViewBag.MinSalary, searchmaxsalary = ViewBag.MaxSalary })"><i class="fas fa-sort"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
                <a class="ml-2 text-light" href="@Url.Action("Index", new { sortOrder = ViewBag.SalarySortParm, searchname = ViewBag.Name, searchphone = ViewBag.Phone, searchjoindate = ViewBag.JoinDate, searchleftdate = ViewBag.LeftDate, searchposition = ViewBag.Position, searchminsalary = ViewBag.MinSalary, searchmaxsalary = ViewBag.MaxSalary })"><i class="fas fa-sort"></i></a>
            </th>
            <th class="text-center">Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoinDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeftDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td class="text-center">
                    <a class="text-default dialog-link" href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-edit"></i></a>
                    <a class="dialog-link text-danger ml-1" data-toggle="tooltip" data-placement="bottom" title="Delete" href="@Url.Action("Delete", new { id = item.Id })">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
    @if (Model.Count() <= 0)
    {
        <div class="text-center">No data to display</div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.standalone.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $('#StartDate').datepicker({
                todayBtn: "linked",
                todayHighlight: true,
                closeText: 'Closed',
                orientation: "left",
                format: 'mm/dd/yyyy',
                autoclose: true,
            }).on('changeDate', function (selected) {
                var startDate = new Date(selected.date.valueOf());
                $('#EndDate').datepicker('setStartDate', startDate);
            }).on('clearDate', function (selected) {
                $('#EndDate').datepicker('setStartDate', null);
            });

            $('#EndDate').datepicker({
                todayBtn: "linked",
                closeText: 'Closed',
                todayHighlight: true,
                orientation: "left",
                format: 'mm/dd/yyyy',
                autoclose: true,
            }).on('changeDate', function (selected) {
                var endDate = new Date(selected.date.valueOf());
                $('#StartDate').datepicker('setEndDate', endDate);
            }).on('clearDate', function (selected) {
                $('#StartDate').datepicker('setEndDate', null);
            });

        });
    </script>
}